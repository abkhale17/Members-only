extends layout

block content
	h1.title= title

	if currentUser
		p Your name #[strong #{currentUser.username}] will be published.
		p Only club members can see your name
		form(method='POST', action='')
			div.form-group
				label(for='title') Title:
				input#title.form-control(type='text' placeholder='Title' name='title' required='true')
			div.form-group
				label(for='message') Message:
				input#message.form-control(type='text' placeholder='message' name='message' required='true' )
			div.form-group
				input#userid.form-control(type='hidden',name='userid', required='true', value=currentUser._id )
			button.btn.btn-primary(type='submit') submit
	else
		p You have to login to create new message
		br
		br
		a(href=`/login` class="btn btn-primary btn-del-msg" ) Login