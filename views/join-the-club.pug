extends layout
block content
	h1= title

	h3 welcome #{user}!

	p Join the club by entering secret admin password
	
	form(method='POST', action='/join_the_club')
		div.form-group
			label(for='adminPW') Admin Password:
			input#pw.form-control(type='password' name='adminPW')
		div.form-group
			input#userid.form-control(type='hidden',name='userid', required='true', value=id )
		button.btn.btn-primary(type='submit') Join Club
